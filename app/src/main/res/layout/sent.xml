<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/sent_text_background"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <!-- TextView for sent message -->
        <TextView
            android:id="@+id/txt_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is sent message"
            android:padding="10dp"
            android:textSize="18sp"/>

        <!-- TextView for sent message timestamp -->
        <TextView
            android:id="@+id/txt_sent_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_sent_message"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:layout_alignStart="@id/txt_receive_message"
            android:layout_marginTop="-6dp"
            android:text="Sent time"
            android:textSize="12sp"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>



